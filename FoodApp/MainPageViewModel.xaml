<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.MainPageViewModel"
             BackgroundImageSource="main_page.jpg">

    <ScrollView>
        <StackLayout Padding="20">

            <Label Text="Our Menu" 
                   TextColor="white"
                   FontSize="24" 
                   HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding Options}"
                IsGrouped="True">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Label Text="{Binding CategoryTitle}" 
                            TextColor="white"
                            FontSize="20"
                            HorizontalOptions="Start"
                            Margin="0,0,0,10"/>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="DarkGrey" Padding="5" Margin="2" BackgroundColor="#000000">
                            <StackLayout>
                                <Grid ColumnDefinitions="*, Auto, Auto, Auto">
                                    <Label Text="{Binding FoodTitle}" 
                                        TextColor="white"
                                        FontSize="18"
                                        VerticalOptions="Center"/>
                                    
                                    <Button x:Name="OrderButton"
                                        Text="Order"
                                        Clicked="OnOrderClicked"
                                        BackgroundColor="#515151"
                                        TextColor="White"
                                        Padding="10"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        Margin="0,0,0,-10"
                                        Grid.Column="1"/>
                                    
                                    <Button x:Name="CancelButton"
                                        Text="Cancel"
                                        Clicked="OnCancelClicked"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        Padding="10"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        Margin="0,0,0,-10"
                                        Grid.Column="2"
                                        IsVisible="False"/>
                                    
                                    <Button x:Name="CollectButton"
                                        Text="Collect"
                                        Clicked="OnCollectClicked"
                                        BackgroundColor="Green"
                                        TextColor="White"
                                        Padding="10"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        Grid.Column="3"
                                        Margin="0,0,0,-10"
                                        IsVisible="False"/>
                                </Grid>
                                <Label x:Name="StatusLabel"
                                    Text=""
                                    FontSize="16"
                                    TextColor="Gray"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start"
                                    Margin="0,-10,0,0"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
   
</ContentPage>
